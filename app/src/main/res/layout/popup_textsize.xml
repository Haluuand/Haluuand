<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/textsize_linearlayout" >

		<TextView
		    android:layout_margin="10dip"
		    android:id="@+id/textsize_textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/popup_button_decrease"
		    android:layout_weight="1"
		    android:gravity="center"
        	android:layout_gravity="center_vertical"
        	android:textColor="@color/menu_text_color"
        	android:textSize="20sp"
        	android:clickable="true"
        	android:background="@drawable/menu_selectitem"
        	/>
        <View  
   			android:layout_width="1px"  
    		android:layout_height="fill_parent" 
   			android:background="?android:attr/listDivider"  
		/> 
		<TextView
		    android:layout_margin="10dip"
		    android:id="@+id/textsize_textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/popup_button_increase"
		    android:layout_weight="1"
		    android:gravity="center"
        	android:layout_gravity="center_vertical"
        	android:textColor="@color/menu_text_color"
        	android:textSize="20sp"
        	android:clickable="true" 
        	android:background="@drawable/menu_selectitem"/>
	
</LinearLayout>
